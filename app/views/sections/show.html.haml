- section_hero = "bk-#{@section.title.downcase}-collection.jpg"
- if @section.title.downcase == 'bridal'
  - y_position = '60%'
-else
  - y_position = '20%'
.page-hero{style: "background: url(#{asset_path(section_hero)}) center #{y_position}"}

.page-wrapper
  .container.page-container
    %h3= @section.title
    %hr
    .listings
      -@section.listings.each do |listing|
        =link_to listing_path(listing.id), class: "listing", style: "background-image: url(#{listing.image.thumbnail})" do
          .overlay
            .listing-content
              %h3= listing.nice_title
              %h5= listing.price
